<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="206.0" minWidth="361.0" prefHeight="206.0" prefWidth="361.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dialogs.newRepoController">
   <children>
      <VBox spacing="10.0">
         <children>
            <Label text="Create a new repository">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label text="Name:" />
            <TextField fx:id="nameInput" />
            <Label text="Local path:" />
            <HBox>
               <children>
                  <TextField fx:id="localPathInput" prefHeight="25.0" prefWidth="290.0" />
                  <Button mnemonicParsing="false" onAction="#dirPick" text="Choose..." />
               </children>
            </HBox>
            <GridPane alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#createRepo" text="Create repository" />
                  <Button fx:id="cancelBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#closeDialog" text="Cancel" GridPane.columnIndex="2" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
